<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- PluginConfig -->
        <service
                id="sd.filter_description.plugin.config"
                class="\Shopware\Components\Plugin\CachedConfigReader"
        >
            <factory service="shopware.plugin.cached_config_reader" method="getByPluginName" />
            <argument type="string">sdFilterDescriptionShopware</argument>
        </service>
        <!-- Services -->
        <service
                id="sd.filter_description.services.config"
                class="sdFilterDescriptionShopware\Services\Config"
        >
            <argument type="service" id="sd.filter_description.plugin.config" />
        </service>

        <!-- Subscriber -->
        <service
                id="sd.filter_description.subscriber.template_registration"
                class="sdFilterDescriptionShopware\Subscriber\TemplateRegistration"
        >
            <tag name="shopware.event_subscriber" />
            <argument>%sdfilterdescriptionshopware.plugin_dir%</argument>
            <argument type="service" id="template" />
        </service>
        <service
                id="sd.filter_description.subscriber.frontend_dispatch"
                class="sdFilterDescriptionShopware\Subscriber\FrontendDispatch"
        >
            <tag name="shopware.event_subscriber" />
            <argument type="service" id="sd.filter_description.services.config"/>
        </service>
    </services>
</container>
